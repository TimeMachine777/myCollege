<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.2/css/bulma.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="/css/partials/homeCommon.css">
</head>
<body>
    <!-- Auth-Navbar -->
    <%- include('partials/navbarAuth.ejs') %>

    <section class="section">
        <div class="container">
            <h1 class="title">Register</h1>
            <form action="" method="post">
                <div class="field">
                    <label class="label" for="username">Username(Email) :</label>
                    <div class="control">
                        <input class="input" type="email" id="username" name="username" required>
                    </div>
                </div>
                <div class="field is-grouped">
                    <div class="control">
                        <button class="button is-link" type="submit" formaction="/auth/register/local">Register with local</button>
                    </div>
                    <div class="control">
                        <button class="button is-link" type="submit" formaction="/auth/register/jwt">Register with jwt</button>
                    </div>
                </div>
            </form>
            <br>
            <a class="button is-light" href="/auth/google">
                <span class="icon-text">
                    <span class="icon">
                        <i class="fab fa-google"></i>
                    </span>
                    <span>Sign up with Google</span>
                </span>
            </a>
        </div>
    </section>

    <!-- Common Ending code -->
    <%- include('partials/commonEnd.ejs') %>

    <script src="/js/partials/homeCommon.js"></script>
</body>
</html>
